            -->
        </plugins>
    </build>

    <properties>
        <java.version>1.8</java.version>
        <dropwizard.version>1.3.5</dropwizard.version>
        <dropwizard.metrics.version>4.0.2</dropwizard.metrics.version>
        <dropwizard.views.freemarker>1.3.5</dropwizard.views.freemarker>
        <jsoup.version>1.10.3</jsoup.version>
        <assertj.version>3.8.0</assertj.version>
        <epubcheck.version>4.1.1</epubcheck.version>
        <junit.version>4.12</junit.version>
        <fast-classpath-scanner.version>2.7.4</fast-classpath-scanner.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

</project>
